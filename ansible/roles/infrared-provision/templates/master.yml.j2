name: openshift-master
prefix: null
cpu: "{{ openshift.master.vcpus }}"
cpumodel: "host-passthrough"
memory: "{{ openshift.master.memory }}"
swap: "0"
deploy_os: true
os:
    type: "linux"
    variant: "rhel7"
disks:
    disk1:
        import_url: null
        path: null
        dev: "/dev/vda"
        size: "50G"
        cache: "unsafe"
        preallocation: "metadata"
# infraces and external_network dicts were moved to network file.
interfaces: null

groups:
    - openshift-master
    - overcloud_nodes
    - openshift_nodes
